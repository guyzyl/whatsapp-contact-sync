{
  "version": "2.0.0",
  "tasks": [
    {
      "name": "Website (dev mode)",
      "label": "web: dev",
      "isBackground": true,
      "type": "npm",
      "script": "dev",
      "options": {
        "cwd": "${workspaceFolder}/web"
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "http://localhost:4000/"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*vite.*",
          "endsPattern": "Local:.*http://localhost:4000.*"
        }
      }
    }
  ]
}
